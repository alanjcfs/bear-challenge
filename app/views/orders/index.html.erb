<h1>Listing orders in last 90 days ordered by employee signup date</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Total price</th>
      <th>Created at</th>
      <th>Number of units</th>
      <th>Employee Name</th>
      <th>Sign Up Date</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.total_price %></td>
        <td><%= order.created_at %></td>
        <td><%= order.num_units %></td>
        <td><%= order.employee %></td>
        <td><%= order.employee_signup_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

